<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.timeZone</param-name>
		<param-value>Asia/Tokyo</param-value>
	</context-param>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<servlet>
		<servlet-name>TwitterTweetServlet</servlet-name>
		<servlet-class>twitterappservlet.TwitterTweetServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TwitterTweetServlet</servlet-name>
		<url-pattern>/admin/tweet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>TwitterTimelineServlet</servlet-name>
		<servlet-class>twitterappservlet.TwitterTimelineServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TwitterTimelineServlet</servlet-name>
		<url-pattern>/admin/timeline</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>tweet.jsp</welcome-file>
		<welcome-file>timeline.jsp</welcome-file>
		<welcome-file>success.jsp</welcome-file>
		<welcome-file>failure.jsp</welcome-file>
	</welcome-file-list>
</web-app>